<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <resource-ref>
        <res-ref-name>jdbc/training-java-project-final</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <listener>
        <listener-class>by.hrachyshkin.provider.controller.listener.SessionListener</listener-class>
    </listener>

    <listener>
        <listener-class>by.hrachyshkin.provider.controller.listener.ConnectionListener</listener-class>
    </listener>

    <filter>
        <filter-name>SessionLocaleFilter</filter-name>
        <filter-class>by.hrachyshkin.provider.controller.filter.SessionLocaleFilter</filter-class>
    </filter>
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>by.hrachyshkin.provider.controller.filter.EncodingFilter</filter-class>
    </filter>
    <filter>
        <filter-name>SecurityFilter</filter-name>
        <filter-class>by.hrachyshkin.provider.controller.filter.SecurityFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>SessionLocaleFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>SecurityFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
</web-app>